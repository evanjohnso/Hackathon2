{{#partial "content"}}
    <div class="jumbotron">
    {{#if thisHack}}
        <h1>{{thisHack.focus}}</h1>
        <h6>{{thisHack.location}}</h6>
    </div>
    <div class="row container-fluid">
        {{#if teams}}
            {{each teams}}
                <div class="container-fluid col-md-4">
                    <h1>{{teamName}} </h1>
                    <h6>{{teamBlurb}}</h6>
                    <h6>Currently {{teamSize}} team members.</h6>
                </div>
        {{else}}
            <div class="container-fluid" id="noTeams">
                <h1>Looks like we have no teams yet for {{thisHack.focus}}</h1>
                <h4>Help us out by registering a team!</h4>
                <a href="/{{eventFocus}}/registration"><button class="btn btn-info">Register</button></a>
            </div>
        {{/if}}
    </div>

    {{else}}
        <h1>Something really weird happened, sorry!</h1>
    {{/if}}

{{/partial}}

{{> layout.hbs}}